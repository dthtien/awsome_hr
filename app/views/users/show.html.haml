.container.c-users__show
  %h4.title
    %strong Title:
    = @user.title
  %h4.subtitle
    %strong Name:
    = @user.name
  %h4.subtitle
    %strong Username:
    = @user.username
  %h5.has-text-centered.mt-5.title Orgainisation chart
  .tree
    %ul
      %li
        = link_to @user.name || @user.username, @user
        - if @user.employees.present?
          %ul
            = render @user.employees